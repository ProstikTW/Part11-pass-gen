pipeline{
    agent {
        docker {
            image 'node:18.17.1-alpine3.18'
        }
    }

    environment {
    FIREBASE_DEPLOY_TOKEN = credentials('firebase-token')
    }

    stages{
        stage('Building'){
            steps{
            sh 'docker --version'
            }
        } 

         stage('Testing'){
            steps{
            sh "npm --version"
            sh "npm install -g firebase-tools"
            }
        }

        stage('Staging'){
            steps{
            sh 'firebase --version'
            }
        }

        stage('Production'){
            steps{
            echo 'I cannot install firebase in instance. It breaks my instance at all!'
            }
        }
    }
}
