pipeline{
    agent {
        docker {
            image 'node:16-alpine'
        }
    }

    stages{
        stage('Building'){
            steps{
            sh 'docker --version'
            }
        } 

         stage('Testing'){
            steps{
            sh "npm --version"
            }
        }

        stage('Staging'){
            steps{
            echo "I cannot install Firebase"
            }
        }

        stage('Production'){
            steps{
            echo 'I cannot install firebase in instance. It breaks my instance at all!'
            }
        }
    }
}
